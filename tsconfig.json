{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@components/*": ["./src/components/common/*"],
      "@common": ["./src/components/common/index.tsx"],
      "@pages": ["./src/components/pages/index.tsx"],
      "@layouts": ["./src/components/layouts/index.tsx"],
      "@services/*": ["./src/services/*"],
      "@assets/*": ["./src/assets/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@types": ["./src/types/index.tsx"],
      "@constants/*": ["./src/constants/*"],
      "@apis/*": ["./src/apis/*"],
      "@store/*": ["./src/store/*"],
      "@utils": ["./src/utils/index"],
      "@schema/*": ["./src/schema/*"],
      "@prompt/*": ["./src/prompt/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/assets/images/index.js",
    "src/services/push.js"
  ],
  "exclude": ["node_modules"],
  "types": ["mongodb"]
}
